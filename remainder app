<body>
  <div class="screen">
    <!-- Home Screen -->
    <div id="homeScreen" class="home">
      <h1>üåà Cute To-Do</h1>
      <p>Choose your favorite theme before starting.</p>
      <button onclick="openTemplates()">Choose Template ‚ú®</button>
    </div>

    <!-- Templates Screen -->
    <div id="templatesScreen" class="templates" style="display:none;">
      <h1>Pick a Template</h1>
      <p>Each theme changes colors and stickers.</p>

      <div class="row">
        <div class="templateCard" onclick="chooseTemplate('pastel')">
          <div>üå∏</div>
          <div class="title">Pastel</div>
        </div>

        <div class="templateCard" onclick="chooseTemplate('stars')">
          <div>‚≠ê</div>
          <div class="title">Stars</div>
        </div>

        <div class="templateCard" onclick="chooseTemplate('fruit')">
          <div>üçì</div>
          <div class="title">Fruits</div>
        </div>

        <div class="templateCard" onclick="chooseTemplate('anime')">
          <div>ü´∂</div>
          <div class="title">Anime</div>
        </div>

        <div class="templateCard" onclick="chooseTemplate('cat')">
          <div>üê±</div>
          <div class="title">Cat</div>
        </div>

        <div class="templateCard" onclick="chooseTemplate('unicorn')">
          <div>ü¶Ñ</div>
          <div class="title">Unicorn</div>
        </div>

        <div class="templateCard" onclick="chooseTemplate('nature')">
          <div>üåø</div>
          <div class="title">Nature</div>
        </div>

        <div class="templateCard" onclick="chooseTemplate('game')">
          <div>üéÆ</div>
          <div class="title">Game</div>
        </div>
      </div>

      <button onclick="backHome()">Back</button>
    </div>

    <!-- App Screen -->
    <div id="appScreen" class="app" style="display:none;">
      <div class="sticker s1">üß∏</div>
      <div class="sticker s2">üå∏</div>
      <div class="sticker s3">‚≠ê</div>
      <div class="sticker s4">üçì</div>

      <h2>üåà My Cute To-Do</h2>

      <!-- NEW LABEL -->
      <div class="labelBox">
        <span>üìù Write your task here</span>
        <span class="arrow">‚¨áÔ∏è</span>
      </div>

      <div class="inputRow">
        <input id="taskInput" type="text" placeholder="‚ú® Write something fun" />
        <button class="add" onclick="addTask()">‚ûï</button>
      </div>

      <ul id="taskList"></ul>

      <div class="footer">üíñ Click a task to finish it</div>
    </div>
  </div>

  <script>
    const templates = {
      pastel: {
        bg: "linear-gradient(135deg, #ff9a9e, #fad0c4, #fbc2eb, #a6c1ee)",
        themeColor: "#ff7eb3",
        stickers: ["üß∏","üå∏","‚≠ê","üçì"],
        border: "#ffd1dc"
      },
      stars: {
        bg: "linear-gradient(135deg, #1e3c72, #2a5298, #4a4a8a, #6a5acd)",
        themeColor: "#7b61ff",
        stickers: ["üåü","‚ú®","üåô","‚≠ê"],
        border: "#b0b7ff"
      },
      fruit: {
        bg: "linear-gradient(135deg, #ff9a9e, #ffb347, #ff7eb3, #ffb6c1)",
        themeColor: "#ff4d6d",
        stickers: ["üçì","üçâ","üçë","üçí"],
        border: "#ffd1dc"
      },
      anime: {
        bg: "linear-gradient(135deg, #f8b4d9, #b7d6ff, #c8ffd4, #ffd2a5)",
        themeColor: "#ff6bb5",
        stickers: ["ü´∂","‚ú®","üå∏","üéÄ"],
        border: "#ffb6d6"
      },
      cat: {
        bg: "linear-gradient(135deg, #fceabb, #f8b195, #f7d794, #ffb3c6)",
        themeColor: "#ff7b7b",
        stickers: ["üê±","üò∫","üêæ","üòª"],
        border: "#ffd1dc"
      },
      unicorn: {
        bg: "linear-gradient(135deg, #c3cfe2, #c3f0c9, #f8b4d9, #ffd2a5)",
        themeColor: "#b48cff",
        stickers: ["ü¶Ñ","üåà","‚ú®","‚≠ê"],
        border: "#d1c3ff"
      },
      nature: {
        bg: "linear-gradient(135deg, #a8e6cf, #dcedc1, #ffd3b6, #ffaaa5)",
        themeColor: "#2ecc71",
        stickers: ["üåø","üçÉ","üåº","üå∏"],
        border: "#b6f2c0"
      },
      game: {
        bg: "linear-gradient(135deg, #2b2d42, #4a4e69, #9a8c98, #c9ada7)",
        themeColor: "#00bcd4",
        stickers: ["üéÆ","üïπÔ∏è","‚≠ê","üëæ"],
        border: "#b0e0e6"
      }
    };

    const emojis = ['üåü','üçÄ','üßÅ','üìö','üéÄ','üåà','üê£','üç©'];

    // --------------------
    // LOAD SAVED DATA
    // --------------------
    const savedTemplate = localStorage.getItem('cuteTodoTemplate');
    const savedTasks = JSON.parse(localStorage.getItem('cuteTodoTasks') || "[]");

    if (savedTemplate) {
      applyTemplate(savedTemplate);
      openApp();
      loadTasks(savedTasks);
    }

    function openTemplates() {
      document.getElementById('homeScreen').style.display = 'none';
      document.getElementById('templatesScreen').style.display = 'flex';
    }

    function backHome() {
      document.getElementById('templatesScreen').style.display = 'none';
      document.getElementById('homeScreen').style.display = 'flex';
    }

    function chooseTemplate(name) {
      localStorage.setItem('cuteTodoTemplate', name);
      applyTemplate(name);
      openApp();
    }

    function applyTemplate(name) {
      const t = templates[name];
      document.body.style.background = t.bg;
      document.querySelector("meta[name='theme-color']").setAttribute("content", t.themeColor);

      const stickers = document.querySelectorAll(".sticker");
      stickers[0].textContent = t.stickers[0];
      stickers[1].textContent = t.stickers[1];
      stickers[2].textContent = t.stickers[2];
      stickers[3].textContent = t.stickers[3];
    }

    function openApp() {
      document.getElementById('homeScreen').style.display = 'none';
      document.getElementById('templatesScreen').style.display = 'none';
      document.getElementById('appScreen').style.display = 'block';
    }

    function loadTasks(tasks) {
      tasks.forEach(t => {
        const li = createTaskElement(t.text, t.done);
        document.getElementById('taskList').appendChild(li);
      });
    }

    function createTaskElement(text, done=false) {
      const li = document.createElement('li');
      if (done) li.classList.add('done');

      const span = document.createElement('span');
      span.className = 'taskText';
      const emoji = emojis[Math.floor(Math.random() * emojis.length)];
      span.innerHTML = `<span class="emoji">${emoji}</span>${text}`;

      li.appendChild(span);
      li.onclick = () => {
        li.classList.toggle('done');
        saveTasks();
      };

      const del = document.createElement('button');
      del.className = 'delete';
      del.textContent = 'üóëÔ∏è';
      del.onclick = (e) => {
        e.stopPropagation();
        li.remove();
        saveTasks();
      };

      li.appendChild(del);
      return li;
    }

    function addTask() {
      const input = document.getElementById('taskInput');
      const taskText = input.value.trim();
      if (taskText === '') return;

      if (navigator.vibrate) navigator.vibrate(30);

      const li = createTaskElement(taskText);
      document.getElementById('taskList').appendChild(li);
      input.value = '';
      saveTasks();
    }

    function saveTasks() {
      const tasks = [];
      document.querySelectorAll('#taskList li').forEach(li => {
        tasks.push({
          text: li.innerText.replace('üóëÔ∏è', '').trim(),
          done: li.classList.contains('done')
        });
      });
      localStorage.setItem('cuteTodoTasks', JSON.stringify(tasks));
    }
  </script>
</body>
</html>
